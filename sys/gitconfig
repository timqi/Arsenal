[user]
	name = qiqi
	email = i@timqi.com

[alias]
    a = add
    b = branch
    c = commit -m
    se = !git rev-list --all | xargs git grep -F
    d = diff
    dv = difftool -t vimdiff -y
    p = pull

    ck = checkout
	st = status -sb
    cl = config --global -l

    ll = log --online
	last = log -1 HEAD --stat

    sh = stash
    sp = stash pop

[pull]
	ff = only
